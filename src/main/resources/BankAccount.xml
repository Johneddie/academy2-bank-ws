<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="BankAccount">

    <resultMap id="result" type="BankAccount">
        <result property="id" column="bank_account_id"/>
        <result property="number" column="number"/>   
        <result property="balance" column="balance"/>  
        <result property="isLocked" column="locked"/>  
    </resultMap>
    
    <select id="findByNumber" resultMap="result" parameterType="String">
        SELECT 
        	* 
        FROM 
        	bank_account b 
        WHERE 
        	b.number = #{number}
    </select>
    
   <update id="update" parameterType="BankAccount">
        UPDATE 
        	bank_account
        SET 
	        number = #{number},
	        balance = #{balance},
	        locked = #{isLocked}
        WHERE 
        	bank_account_id = #{id} 
  	</update>
    
</mapper>